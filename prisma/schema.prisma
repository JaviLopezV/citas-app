generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?  // null si se registra solo con Google
  name      String?
  image     String?
  createdAt DateTime @default(now())

  profile   Profile?
}

model Profile {
  id        String  @id @default(cuid())
  userId    String  @unique
  user      User    @relation(fields: [userId], references: [id])

  bio       String?
  age       Int?
  gender    String?
  lookingFor String?
  city      String?
}

model Like {
  id         String   @id @default(cuid())
  fromUserId String
  toUserId   String
  createdAt  DateTime @default(now())

  @@unique([fromUserId, toUserId])
}

model Match {
  id        String   @id @default(cuid())
  userAId   String
  userBId   String
  createdAt DateTime @default(now())

  @@unique([userAId, userBId])
}
